{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 600,
  "height": 600,
  "title": "life expectancy against gdp per capita in 2020",
  "data": {
    "url": "https://raw.githubusercontent.com/darrenKundasawmy/FIT3179/main/Assignment%202/bubble_plot/2020.csv"
  },
  "params": [
    {
      "name": "happiness",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 7,
        "step": 1,
        "name": "happiness level: "
      }
    }
  ],
  "transform": [{"filter": "datum.Ladder_score > happiness"}],
  "encoding": {
    "x": {
      "field": "Log_GDP_per_capita",
      "type": "quantitative",
      "title": "gdp per capita",
      "axis": {"tickCount": 7}
    },
    "y": {
      "field": "Healthy_life_expectancy",
      "type": "quantitative",
      "title": "life expectancy",
      "axis": {"tickCount": 7}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Ladder_score",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [2, 4, 6, 8, 10],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {"field": "Regional indicator", "type": "nominal"},
        "tooltip": [
          {"field": "Regional indicator", "type": "nominal"},
          {
            "field": "Log_GDP_per_capita",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Healthy_life_expectancy",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Ladder_score", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "tooltip": [
          {"field": "Regional indicator", "type": "nominal"},
          {
            "field": "Log_GDP_per_capita",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Healthy_life_expectancy",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Ladder_score", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}
